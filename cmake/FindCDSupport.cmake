IF(CMAKE_SYSTEM_NAME MATCHES "SunOS")
  PKG_CHECK_MODULES(CDIO libcdio_cdda>=0.70)
ELSE(CMAKE_SYSTEM_NAME MATCHES "SunOS")
  FIND_PACKAGE(Cdparanoia)
ENDIF(CMAKE_SYSTEM_NAME MATCHES "SunOS")

IF(CDIO_FOUND OR CDPARANOIA_FOUND)
  SET(CDSupport_FOUND yes)
  INCLUDE(FindPackageMessage)
  FIND_PACKAGE_MESSAGE(CDSupport "Found CD support libraries" "${CDIO_FOUND} ${CDPARANOIA_FOUND}")
ELSE(CDIO_FOUND OR CDPARANOIA_FOUND)
  SET(CDSupport_FOUND no)
  IF(CDSupport_FIND_REQUIRED)
    MESSAGE(FATAL_ERROR "CD support libraries not found")
  ELSE(CDSupport_FIND_REQUIRED)
    IF(NOT CDSupport_FIND_QUIETLY)
      MESSAGE(STATUS "CD support libraries not found")
    ENDIF(NOT CDSupport_FIND_QUIETLY)
  ENDIF(CDSupport_FIND_REQUIRED)
ENDIF(CDIO_FOUND OR CDPARANOIA_FOUND)
